<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">InternManagement</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>

        <li class="nav-item px-3 dropdown show">
            <NavLink class="nav-link dropdown-toggle" href="" @onclick="() => expandSubMenu = !expandSubMenu">
                <span class="oi oi-folder" aria-hidden="true"></span> Registros
            </NavLink>

            @if (expandSubMenu)
            {
               

                <ul class="nav flex-column">
                    <li class="nav-item px-1">
                        <NavLink class="nav-link" href="instituciones">
                            <span class=" oi oi-briefcase px-2" aria-hidden="true"></span> Instituciones
                        </NavLink>
                    </li>
                </ul>

                <ul class="nav flex-column">
                    <li class="nav-item px-1">
                        <NavLink class="nav-link" href="nacionalidades">
                            <span class=" oi oi-location px-2" aria-hidden="true"></span> Nacionalidades
                        </NavLink>
                    </li>
                </ul>

                <ul class="nav flex-column">
                    <li class="nav-item px-1">
                        <NavLink class="nav-link" href="pasantes">
                            <span class=" oi oi-person px-2" aria-hidden="true"></span> Pasantes
                        </NavLink>
                    </li>
                </ul>

                <ul class="nav flex-column">
                    <li class="nav-item px-1">
                        <NavLink class="nav-link" href="habilidades">
                            <span class=" oi oi-fork px-2" aria-hidden="true"></span> Habilidades
                        </NavLink>
                    </li>
                </ul>

                <ul class="nav flex-column">
                    <li class="nav-item px-1">
                        <NavLink class="nav-link" href="AsignarHabilidades">
                            <span class=" oi oi-paperclip px-2" aria-hidden="true"></span> Asignar Habilidades
                        </NavLink>
                    </li>
                </ul>

                <ul class="nav flex-column">
                    <li class="nav-item px-1">
                        <NavLink class="nav-link" href="tareas">
                            <span class=" oi oi-spreadsheet px-2" aria-hidden="true"></span> Tareas
                        </NavLink>
                    </li>
                </ul>

                <ul class="nav flex-column">
                    <li class="nav-item px-1">
                        <NavLink class="nav-link" href="AsignarTareas">
                            <span class=" oi oi-clipboard px-2" aria-hidden="true"></span> Asignar Tareas
                        </NavLink>
                    </li>
                </ul>

                <ul class="nav flex-column">
                    <li class="nav-item px-1">
                        <NavLink class="nav-link" href="RealizarTareas">
                            <span class=" oi oi-task px-2" aria-hidden="true"></span> Realizar Tarea
                        </NavLink>
                    </li>
                </ul>

            }
        </li>

        <li class="nav-item px-3 dropdown show">
            <NavLink class="nav-link dropdown-toggle" href="" @onclick="() => expandConsult = !expandConsult">
                <span class="oi oi-folder" aria-hidden="true"></span> Consultas
            </NavLink>

            @if (expandConsult)
            {
                <ul class="nav flex-column">
                    <li class="nav-item pl-0">
                        <NavLink class="nav-link" href="CInstituciones">
                            <span class=" oi oi-list" aria-hidden="true"></span> Consultar Instituciones
                        </NavLink>
                    </li>
                </ul>

                <ul class="nav flex-column">
                    <li class="nav-item pl-0">
                        <NavLink class="nav-link" href="CNacionalidades">
                            <span class=" oi oi-list" aria-hidden="true"style="word-wrap:break-word" ></span> Consultar Nacionalidad
                        </NavLink>
                    </li>
                </ul>

                <ul class="nav flex-column">
                    <li class="nav-item pl-0">
                        <NavLink class="nav-link" href="CPasantes">
                            <span class=" oi oi-list" aria-hidden="true"></span> Consultar Pasantes
                        </NavLink>
                    </li>
                </ul>

                <ul class="nav flex-column">
                    <li class="nav-item pl-0">
                        <NavLink class="nav-link" href="CTareas">
                            <span class=" oi oi-list" aria-hidden="true"></span> Consultar Tareas
                        </NavLink>
                    </li>
                </ul>

                <ul class="nav flex-column">
                    <li class="nav-item pl-0">
                        <NavLink class="nav-link" href="CHabilidades">
                            <span class=" oi oi-list" aria-hidden="true"></span> Consultar Habilidades
                        </NavLink>
                    </li>
                </ul>

            }

        </li>





    </ul>
</div>

@code {
    private bool collapseNavMenu = true;
    private bool expandSubMenu;
    private bool expandConsult;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
